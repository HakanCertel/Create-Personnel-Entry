@model List<Personnel>

<div class="row">
    <div class="col-md-12">
        <h1 class="h3">Personnel List</h1>
        <hr>
        <a class="btn btn-primary btn-sm" href="/Home/create">Create Personnel</a>
        <hr>
        <table data-page-length='3' id="myTable" class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td>Identity Number</td>
                    <td>FirstName</td>
                    <td>LastName</td>
                    <td>Gender</td>
                    <td>Graduation</td>
                    <td style="width: 160px;"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr class="">
                            <td>@item.IdentityNumber</td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Gender</td>
                            <td>@item.Graduation</td>
                            <td>
                                <a href="/Home/Edit/@item.Id" class="btn btn-primary btn-sm mr-2">Edit</a>

                                <form action="/home/delete" method="POST" style="display: inline;">
                                    <input type="hidden" name="Id" value="@item.Id">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>No Personnel</h3>
                    </div>
                }


            </tbody>
        </table>
    </div>
</div>