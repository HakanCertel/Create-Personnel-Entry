@model Personnel

<form method="POST">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="Name">First Name</label>
        <input asp-for="FirstName" value="@Model.FirstName" class="form-control">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Price">Last Name</label>
        <input asp-for="LastName" value="@Model.LastName" class="form-control">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Identity Number</label>
        <input asp-for="IdentityNumber" value="@Model.IdentityNumber" class="form-control">
        <span asp-validation-for="IdentityNumber" class="text-danger"></span>
    </div>
    <div class="form-check-inline mb-3">
        <input type="radio"
               name="Gender"
               value="Kadın"
               id="Kadın"
        @(Model.Gender == "Kadın" ? "checked" : "") />
        <label for="Gender" class="form-check-label">Kadın</label>
    </div>
    <div class="form-check-inline">
        <input type="radio"
               name="Gender"
               value="Erkek"
               id="Erkek"
        @(Model.Gender == "Erkek" ? "checked" : "") />
        <label for="Gender" class="form-check-label">Erkek</label>
    </div>
    <div class="form-group">
        <label for="Graduation">Graduation</label>
        <select asp-for="Graduation" asp-items="@ViewBag.Universies"></select>
    </div>
   
    <button type="submit" class="btn btn-primary">Submit</button>
</form>